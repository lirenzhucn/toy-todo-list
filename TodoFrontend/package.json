{
  "name": "todo-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && rm -rf ../TodoBackend/src/TodoBackend.API/wwwroot/* && cp -r dist/* ../TodoBackend/src/TodoBackend.API/wwwroot/",
    "preview": "vite preview",
    "test:unit": "vitest",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "generate-api": "openapi --input ../openapi.json --output ./src/api --client axios --name TodoApiClient"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.2",
    "dayjs": "^1.11.10",
    "element-plus": "^2.4.4",
    "pinia": "^2.1.7",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.2",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.1.1",
    "typescript": "~5.3.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.8",
    "vue-tsc": "^3.1.3"
  }
}
